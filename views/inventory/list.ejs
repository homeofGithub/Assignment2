<%- include ../partials/header.ejs %>

    <!-- <%= InventoryList %> -->

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <h1>Business Contacts List</h1>
        <br>
        <div>
            <a href="/inventory/add" class="btn btn-primary align-self-end" role="button">
                <i class="fas fa-plus-circle"></i> 
                Add a new Item
            </a>                
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover myTable">
                <!-- Header Row-->
                <tr>
                    <th class="text-center">Contact Name</th>
                    <th class="text-center">Contact Number</th>
                    <th class="text-center">Email Address</th>
                    <th class="text-center">Working Address</th>
                    <th class="text-center">Additional Information</th>
                    <th class="text-center" colspan="2">Actions</th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < InventoryList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= InventoryList[count].item %></td>
                        <td class="text-center"><%= InventoryList[count].qty %></td>
                        <td class="text-center"><%= InventoryList[count].status %></td>
                        <td>
                            Street: <%= InventoryList[count].size.h %><br/>
                            City: <%= InventoryList[count].size.w %><br/>
                            Postcode: <%= InventoryList[count].size.uom %><br/>
                        </td>
                        <td class="text-center"><%= InventoryList[count].tags %></td>
                        <td class="text-center">
                            <a href="/inventory/edit/<%= InventoryList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i></a>
                        </td>
                        <td class="text-center">
                            <a href="/inventory/delete/<%= InventoryList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    
                <% } %>
            </table>
        </div>
    </div>
  </main>
<%- include ../partials/footer.ejs %>